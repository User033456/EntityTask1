<Window x:Class="WpfApp2.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="FeedbackWindow" Style="{DynamicResource CThemeWindow}" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Style="{DynamicResource CThemeTextBlock}">Если вы нашли неисправности, пожалуйста, <LineBreak /> напишите обращение на следующий адрес</TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBox IsReadOnly="True" Style="{DynamicResource CThemeTextBox}">shpakovdev@mail.ru</TextBox>
        </Viewbox>
    </Grid>
</Window>
