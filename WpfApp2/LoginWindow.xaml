<Window x:Class="WpfApp2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="LoginWindow" Style="{DynamicResource CThemeWindow}" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Style="{DynamicResource CThemeTextBlock}" Margin="5">Введите логин</TextBlock>
        <TextBox Grid.Row="1" Style="{DynamicResource CThemeTextBox}" Margin="5" Name="LoginTextBox"></TextBox>
        <TextBlock Grid.Row="2" Style="{DynamicResource CThemeTextBlock}" Margin="5">Введите пароль</TextBlock>
        <TextBox Grid.Row="3" Style="{DynamicResource CThemeTextBox}" Margin="5" Name="PasswordTextBox"></TextBox>
        <Button Grid.Row="4" Style="{DynamicResource CThemeButton}" Margin="5" Name="LoginButton" Click="LoginButton_OnClick">Войти</Button>
        <TextBlock Grid.Row="5" Style="{DynamicResource CThemeTextBlock}" Name="SignInTextBlock" Margin="5">Нет аккаунта?</TextBlock>
        <Button Grid.Row="6" Style="{DynamicResource CThemeButton}" Margin="5" Name="SignInButton" Click="SignInButton_OnClick">Зарегистрироваться</Button>
    </Grid>
</Window>
